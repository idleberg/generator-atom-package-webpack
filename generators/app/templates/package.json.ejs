{
    "name": "<%= pkg.name %>",
    "main": "./lib/<%= pkg.name %>",
    "version": "0.0.0",
    "description": "<%= pkg.description %>",
    "scripts": {
        "build": "webpack --mode production",
        "dev": "webpack --watch --mode development",
        "lint:js": "eslint src/*.js",<% if (pkg.stylelintConfig) { %>
        "lint:styles": "stylelint styles/*.{css,less}",<% } %>
        "lint": "<%= pkg.lintScript %>",
        "<%= pkg.buildScript %>": "npm run build",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/<%= pkg.author %>/<%= pkg.repositoryName %>"
    },
    "homepage": "https://atom.io/packages/<%= pkg.name %>",
    "bugs": {
        "url": "https://github.com/<%= pkg.author %>/<%= pkg.repositoryName %>/issues"
    },
    "license": "<%= pkg.license %>",
    "engines": {
      "atom": ">=1.0.0 <2.0.0"
    },<% if (pkg.activationCmd) { %>
    "activationCommands": {
      "atom-workspace": [
        "<%= pkg.name %>:hello-world"
      ]
    },<% } %><% if (pkg.atomDependencies) { %>
    "package-deps": <%- JSON.stringify(pkg.atomDependencies) %>,<% } %>
    "dependencies": {},
    "devDependencies": {},
    "husky": {
      "hooks": {
        "<%= pkg.linterHook %>": "npm run lint"
      }
    }
}
